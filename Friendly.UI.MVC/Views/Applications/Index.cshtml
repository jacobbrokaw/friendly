@model IEnumerable<Friendly.DATA.EF.Application>

@{
	ViewBag.Title = "Applications";
}

<h2>@ViewBag.Title</h2>

<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.ApplicationDate)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ApplicationStatus.StatusName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.OpenFriendship.FriendshipId)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.OpenFriendship.Clique.BetaId)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.ApplicationDate)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ApplicationStatus.StatusName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.OpenFriendship.Friendship.Title)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.OpenFriendship.Clique.UserDetail.FullName)
			</td>
			<td>
				@Html.ActionLink("View", "Details", new { id = item.ApplicationId })
			</td>
		</tr>
	}

</table>

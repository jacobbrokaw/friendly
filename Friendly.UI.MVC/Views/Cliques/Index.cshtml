@model IEnumerable<Friendly.DATA.EF.Clique>

@{
    ViewBag.Title = "Cliques";
}

<div class="fixed-action-btn">
    <a href="@Url.Action("Create")" class="btn-floating btn-large accent waves-effect waves-light">
        <i class="large material-icons">add</i>
    </a>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col s12 m6 l4">
            <div class="card">
                <div class="card-content">
                    <span class="card-title grey-text text-darken-4">@item.Name</span>
                    <ul class="card-list">
                        <li>
                            @item.Location
                            <i class="material-icons right">place</i>
                        </li>
                        <li><div class="divider"></div></li>
                        <li>@item.UserDetail.FullName<i class="material-icons right">verified_user</i></li>
                    </ul>
                </div>
                <div class="card-action">
                    @Html.ActionLink("Edit", "Edit", new { id = item.CliqueId }, new { @class = "waves-effect waves-accent btn-flat accent-text" })
                    @if (item.OpenFriendships.Count == 0)
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.CliqueId }, new { @class = "waves-effect waves-light btn accent" })
                    }
                    else
                    {
                        <a href="javascript:void(0)" class="btn-flat disabled" disabled>Delete</a>
                    }
                </div>
            </div>
        </div>
    }
</div>
@model Friendly.DATA.EF.Clique

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col s12 m8 l6 offset-l3 offset-m2">
        <div class="card">
            <div class="card-content">
                <span class="card-title grey-text text-darken-4">Please Confirm</span>
                <p>Are you sure you would like to delete the clique, <strong>@Model.Name?</strong></p>
            </div>
            <div class="card-action">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <a href="@Url.Action("Index")" class="btn-flat waves-effect waves-accent accent-text">Cancel</a>
                    <button type="submit" class="right btn accent waves-effect waves-light">
                        Delete
                        <i class="material-icons right">delete</i>
                    </button>
                }
            </div>
        </div>
    </div>
</div>
